Film "image" "integer xresolution" [800] "integer yresolution" [800] "string filename" "out.png"

Sampler "sobol" "integer samples" [16]
Integrator "path" "integer maxdepth" [8]

LookAt 0.0 20.0 75.0 0 0 0 0 1 0
Camera "perspective" "float fov" [30] "float focaldistance" [1] "float lensradius" [1]

WorldBegin

LightSource "point" "point from" [-10.0 10.0 50.0] "rgb I" [3 3 3]

# Plane (behind teapot, shows on front of teapot though)
AttributeBegin
  Material "matte" "rgb Kd" [0.5 0.5 0.5]
  Translate 0.0 0.0 -0.5
  Rotate 0 1 0 0
  Scale 25.0 25.0 25.0
  Shape "plymesh" "string filename" ["./resources/meshes/plane.obj"]
AttributeEnd

# Teapot
AttributeBegin
  Material "matte" "rgb Kd" [0.0 0.5 0.0]
  Translate 0.0 -0.1 0.0
  Rotate -90 1 0 0
  Rotate -22.5 0 0 1
  Scale 1.0 1.0 1.0
  Shape "plymesh" "string filename" ["./resources/meshes/teapot.obj"]
AttributeEnd

# Sphere (order is fine)
AttributeBegin
  Material "matte" "rgb Kd" [0.1 0.0 0.0]
  Translate 0.0 0.0 0.5
  Scale 5.0 5.0 5.0
  Shape "sphere"
AttributeEnd

# Sphere closest
AttributeBegin
  Material "matte" "rgb Kd" [0.0 0.0 0.1]
  Translate 0.0 0.25 1.0
  Scale 3.0 3.0 3.0
  Shape "sphere"
AttributeEnd

WorldEnd